import org.newdawn.slick.Image;
import org.newdawn.slick.SlickException;
import org.newdawn.slick.Sound;


public class Amulet extends Item{
	
	public static final int HP_BONUS = 40;
	public static final String IMAGE = "assets/items/amulet.png";
	public static final String NAME = "Amulet of Vitality";
	public static final String PICKUP = "assets/s_health.wav";
	
	public Amulet(double start_x, double start_y) throws SlickException
	{
		this.hp_bonus = HP_BONUS;
		this.img = new Image(IMAGE);
		this.name = NAME;
		this.x = start_x;
		this.y = start_y;
		this.pickup_noise = new Sound(PICKUP);
	}

}
